<table class="table table-striped table-bordered" ng-controller="listCtrl">
  <caption><h2>Igrejas</h2></caption>
  <thead>
    <tr>
      <th>Nome</th>
	  <th>Descricao</th>
      <th>Endereco</th>
	  <th>Responsavel</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="igreja in igrejas">
      <td>{{igreja.nome}}</td>
      <td>{{igreja.descricao}}</td>
      <td>{{igreja.endereco}}, {{igreja.bairro}}, {{igreja.cidade}}, {{igreja.uf}}</td>
      <td>{{igreja.responsavel}}</td>
      <td><a href='#/edit/{{igreja.id}}'>Edit</a> | <a href='javascript:void(0)' ng-click="deleteContact(contact);">Apagar</a></td>
    </tr>
  </tbody>
</table>